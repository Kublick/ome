# Environment variables for Docker Compose
# Copy this to .env and fill in the values

# Database Configuration
# If using an external database, set the full connection string below (required)
DATABASE_URL=postgresql://username:password@db-host:5432/dbname

# If you are using an internal DB service, you can use these values instead (not required for external DB):
# POSTGRES_USER=ome
# POSTGRES_PASSWORD=your_secure_password_here
# POSTGRES_DB=ome
# DB_PORT=5432

# Application Port
PORT=3000

# Better Auth Configuration
BETTER_AUTH_SECRET=your_secret_key_here_min_32_chars
BETTER_AUTH_URL=http://localhost:3000
VITE_BETTER_AUTH_URL=http://localhost:3000

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# Node Environment
NODE_ENV=production
